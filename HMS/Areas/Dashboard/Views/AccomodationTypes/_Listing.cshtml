@model HMS.Areas.ViewModels.AccomodationTypesListingModels

@if (Model != null && Model.AccomodationTypes !=null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
          
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var accomodation in Model.AccomodationTypes)
            {

                <tr>
                    <td>
                        @accomodation.Name;
                    </td>
                    <td>
                        @accomodation.Description;
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationTypes",new {ID = accomodation.ID})" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal">Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationTypes",new {ID = accomodation.ID})" type="button" class="data-btn btn btn-danger">Delete</button>
                    </td>
                   
                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No Records exits.

    </div>
}
