
@{
    ViewBag.Title = "ViewBookingListPage";
    Layout = "~/Views/Shared/_CounterOlyout.cshtml";
}

<h2>ViewBookingListPage</h2>


<br />
<div class="alert alert-success text-center" role="alert" style="height:40px;"><h5 style="margin-top:-13px!important;"><span style="font-size:30px;font-family:Arial" id="bookingstatusmessagecheckout"></span></h5></div>
<br />
<div>
    <div>
        <table class="table table-hover" id="hotalbookingtableCheckin" style="width:100%!important">
            <thead>
                <tr>

                    <th>GuestName</th>
                    <th>BookingEmail</th>
                    <th>CheckInDate</th>
                    <th>ActionButton</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



<!------------------------------------------Hota booking Model---------------------------------------------------->
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="hotalbookingdetailsModalCheck" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Customer Booking Hotal Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div>
                        <table class="table table-hover">

                            <tr><th>GuestName</th><td id="GuestNamecheckin"></td></tr>
                            <tr><th>BookingEmail</th><td id="BookingEmailcheckin"></td></tr>
                            <tr><th>BookingDate</th><td id="BookingDatecheckin"></td></tr>
                            <tr><th>CheckInDate</th><td id="CheckInDatecheckin"></td></tr>
                            <tr><th>AccommodationTypeName</th><td id="AccommodationTypeNamecheckin"></td></tr>
                            <tr><th>AccommodationPackageName</th><td id="AccommodationPackageNamecheckin"></td></tr>
                            <tr><th>FeePerNight</th><td id="FeePerNightcheckin"></td></tr>
                            <tr><th>Duration</th><td id="Durationcheckin"></td></tr>
                            <tr><th>NoOfAdults</th><td id="NoOfAdultscheckin"></td></tr>
                            <tr><th>NoOfChildren</th><td id="NoOfChildrencheckin"></td></tr>
                            <tr><th>AccommodationName</th><td id="AccommodationNamecheckin"></td></tr>
                            <tr><th>NoOfRoom</th><td id="NoOfRoomcheckin"></td></tr>
                            <tr><th>TotalAmount</th><th id="totalAmountcheckin"></th></tr>
                            <tr><th>CustomerName</th><td id="CustomerNamecheckin"></td></tr>
                            <tr><th>CustomerContact</th><td id="CustomerContactcheckin"></td></tr>

                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<!------------------------------------------Booking Model CheckOut-------------------------------------------------------------------->
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="bookingcheckoutmodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Customer Booking Action</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" id="bookingcheckout" class="form-control" hidden />

                <div>
                    <div>
                        <div class="alert alert-primary" role="alert"><h5>Do you wonts Sure CheckOut    Yes/No</h5></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="bookingcheckout();"><i class="fa fa-check" aria-hidden="true"></i> Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> No</button>

            </div>
        </div>
    </div>
</div>