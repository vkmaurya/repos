@*------------------------------AccomodationType Model Start-----------------------------------------*@

<!-- Button trigger modal -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="alert alert-success accomodationalertmesagediv text-center" role="alert"><span id="userrolemessage"></span></div>
    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="ruseraddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ADD NEW USER AND UPDATE</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="resetrolsesform();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!------------------------satrt user forms-------------------------------------------->
                <div class="row">

                    <!----1----->
                    <div class="form-group col-md-6">
                        <input type="text" id="ruserid" hidden />
                        <label for="user" class="lablenamet">Enter UserName</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-user-o formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="rusername" placeholder="Enter UserName">
                        <div class="uservalidationmesage"><span id="messageusernamee"></span></div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4" class="lablename">Select Gander </label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-transgender-alt formicons" aria-hidden="true"></i>  </span></button><select class="userformcontrol" id="rusergander">
                            <option>Please Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                        <div class="uservalidationmesage"><span id="messageusergandere"></span></div>
                    </div>
                    <!-----2---->
                    <div class="form-group col-md-6">
                        <label for="useremail" class="lablename">Email Email</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-envelope-o formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="ruseremail" placeholder="Enter Email Address">
                        <div class="uservalidationmesage"><span id="messageuseremaile"></span></div>

                    </div>
                    <div class="form-group col-md-6">
                        <label for="usercontact" class="lablename">Enter Contact</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-mobile formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="rusercontact" placeholder="Please Enter UserContact">
                        <div class="uservalidationmesage"><span id="messageusercontacte"></span></div>
                    </div>
                    <!----3----->

                    <div class="form-group col-md-6">
                        <label for="userdob" class="lablename">Enter DOB</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-calendar formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="ruserdob" placeholder="Please Enter DOB">
                        <div class="uservalidationmesage"><span id="messageuserdobe"></span></div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="useradharnumber" class="lablename">Enter Adhar Number</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-sort-numeric-asc formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="ruseradharnumber" placeholder="Enter Adhar Number">
                        <div class="uservalidationmesage"><span id="messageuseradharnumbere"></span></div>
                    </div>
                    <!-----4---->
                    <div class="form-group col-md-6">
                        <label for="userpassword" class="lablename">Enter Password</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-key formicons" aria-hidden="true"></i>  </span></button><input type="text" class="userformcontrol" id="ruserpassword" placeholder="please Enter user password">
                        <div class="uservalidationmesage"><span id="messageuserpassworde"></span></div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4" class="lablename">Enter Address</label><br />
                        <button class="inputiconsuser"><span><i class="fa fa-map-marker formicons" aria-hidden="true"></i>  </span></button><input class="userformcontrol" id="ruseraddress" placeholder="Please Enter User Full Address">
                        <div class="uservalidationmesage"><span id="messageuseraddresse"></span></div>
                    </div>




                </div>
                <!-----------------------end user forms------------------------------------------------->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="roleaddandupdateuser();"><i class="fa fa-cloud" aria-hidden="true"></i> Save</button>
                <button type="button" class="btn btn-warning" style="color:white;" onclick="resetrolsesform();"><i class="fa fa-repeat" aria-hidden="true"></i> Reset</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="resetrolsesform();"><i class="fa fa-times" aria-hidden="true"></i> Close</button>

            </div>
        </div>
    </div>
</div>

@*------------------------------AccomodationType Model End-------------------------------------------*@

