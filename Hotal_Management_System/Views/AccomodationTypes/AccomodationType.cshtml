
@{
    ViewBag.Title = "AccomodationType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AccomodationType</h2>
<hr />


@*-----------------------------------------------------------------------------Bootstrap Mode start-----------------------------------------------------------------------------------------------------*@
<div class="container-fluid table-responsive" ">

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-success modelbtn" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-plus" aria-hidden="true"></i> Add New AccomodationType</button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="messagehidedive">
                        <h5 class="modal-title hidedivmessage" id="exampleModalLabel"> <marquee direction="up">Add New AccomodationType</marquee></h5>
                        <h5 class="modal-title hidedivupdate" id="exampleModalLabel"> <marquee direction="up">Update AccomodationType</marquee></h5>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:red" onclick="resetaccomodationtype();">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="deleterecords">

                        <div class="deleterecordsmessage">
                            <input type="hidden" id="deleteId" class="form-control" />
                            <h2 style="color:red;font-family:initial">Do You Wonts Delete This Records</h2>
                        </div>

                        <div class="deleterecordsmessagesuccess">
                            <div class="text-center">
                                <i class="fa fa-check-square-o" style="font-size:200px;color:green" aria-hidden="true"></i>
                                <h2>Accomodation Delete Successfully</h2>
                            </div>
                        </div>


                    </div>


                    @*-------------------------------------------------------Add & Update Div Start----------------------------------------------------------------------------------------------------*@
                    <div class="messagehidedive">

                        <div class="form-group row hidediv">
                            <label for="name" class="col-sm-2 col-form-label">Name :</label>
                            <div class="col-sm-10">

                                <input type="hidden" id="id" class="form-control" />
                                <input type="text" class="form-control" id="name" placeholder="Enter Accomodation Name">
                                <span id="messagename"></span>
                            </div>
                        </div>

                        <div class="addicon">
                            <div class="text-center">
                                <i class="fa fa-check-square-o" style="font-size:200px;color:green" aria-hidden="true"></i>
                                <h2>Accomodation Add Successfully</h2>
                            </div>
                        </div>

                        <div class="updateIcon">
                            <div class="text-center">
                                <i class="fa fa-check-square-o" style="font-size:200px;color:green" aria-hidden="true"></i>
                                <h2>Accomodation Update Successfully</h2>
                            </div>
                        </div>

                        <div class="form-group row hidediv">
                            <label for="descreption" class="col-sm-2 col-form-label">Description </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="description" placeholder="Enter Description">
                                <span id="messagedescription"></span>
                            </div>
                        </div>

                    </div>

                    @*-------------------------------------------------------Add & Update Div End----------------------------------------------------------------------------------------------------*@

                </div>
                <div class="modal-footer">
                    @*-------------------------------------------------------Add & Update Div Start-- button--------------------------------------------------------------------------------------------------*@
                    <div class="hidediv messagehidedive">
                        <button type="button" class="btn btn-success" onclick="addAccomodation();">Submit</button>
                        <button type="button" class="btn btn-warning" onclick="resetaccomodationtype();">Reset</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="resetaccomodationtype();">Close</button>
                    </div>
                    @*-------------------------------------------------------Add & Update Div end button----------------------------------------------------------------------------------------------------*@
                    <div class="deleterecords deleterecords1">
                        <button type="button" class="btn btn-success" onclick="deleterecordsconfirm();">Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="resetaccomodationtype();">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*-----------------------------------------------------------------------------Bootstrap Model End------------------------------------------------------------------------------------------------------*@

    <div class="container-fluid table-responsive">
        <div>
            <table class="table table-bordered table-hover text-center tablefont" id="accomodationtypetable">
                <thead class="" style="background-color:#007FFF;color:white;">
                    <tr>

                        <th scope="col">NAME</th>
                        <th scope="col">DESCRIPTION</th>
                        <th scope="col">ACTION</th>
                    </tr>
                </thead>
                <tbody class="tboday"></tbody>
            </table>
        </div>
    </div>

</div>