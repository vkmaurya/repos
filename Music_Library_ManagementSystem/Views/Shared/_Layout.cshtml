<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/datatablefile/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/datatablefile/css/jquery.dataTables.min.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Media", "HireMediaRent", "Home")</li>

                    @*<li>@Html.ActionLink("Login", "Login", "Login")</li>*@


                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (@HttpContext.Current.Session["adminusername"] != null)
                        {
                            <li>@Html.ActionLink("Admin", "Masterpage", "Admin")</li>

                            <li><a href="#" style="color:green">@HttpContext.Current.Session["adminusername"]</a></li>

                        }
                        else if (@HttpContext.Current.Session["custmoerusername"] != null)
                        {
                            <li><a href="#" style="color:green">@HttpContext.Current.Session["custmoerusername"]</a></li>

                        }


                        if (@HttpContext.Current.Session["adminusername"] != null)
                        {
                            <li>@Html.ActionLink("logOut", "logout", "login")</li>
                        }
                        else if (@HttpContext.Current.Session["custmoerusername"] != null)
                        {
                            <li>@Html.ActionLink("logOut", "logout", "login")</li>

                        }
                        else
                        {
                            <li>@Html.ActionLink("Registration", "Index", "Customer")</li>

                            <li>@Html.ActionLink("Login", "Login", "login")</li>
                        }

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>


        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Content/datatablefile/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/Content/datatablefile/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#hirerenttable").dataTable();
            disablecheckbox();
        });


    </script>
</body>
</html>
