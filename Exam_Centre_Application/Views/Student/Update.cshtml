
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link href="~/Content/css/studentMasterpage.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Exame/studentMasterPage">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Student/Update">Update</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Session["Username"] != null)
                        {
                            <li class="nav-item"><a href="" class="nav-link session"> @Session["Username"].ToString() </a></li>
                            <li class="nav-item"><a href="/Home/Logout" class="nav-link logout">LogOut</a></li>
                        }

                    }

                </ul>
            </div>
        </div>
    </nav>

    <br>
    <h1 class="text-center">Update Records</h1>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">

                <div style="padding-right:20px;">
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">NAME</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" hidden id="id" placeholder="Enter Name" value="@Session["id"]">
                            <input type="text" class="form-control" id="nameu" placeholder="Enter Name">
                            <span id="messagenameu"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">GANDER</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ganderu" placeholder="Select Gander">
                                <option>Select Option</option>
                                <option value="MALE">Male</option>
                                <option value="FEMALE">Female</option>
                            </select>
                            <span id="messageganderu"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">CONTACAT</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="contactu" placeholder="Enter conctact">
                            <span id="messagecontactu"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">EMAIL</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="emailu" placeholder="Enter Email">
                            <span id="messageemailu"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="imagesu" class="col-sm-2 col-form-label">IMAGES</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control file-loading" disabled id="imagesu" name="imagesu" multiple="multiple" placeholder="Images upload" required accept="image/jpg,image/png,image/jpeg">
                            <span id="messageimagesu"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="submit" class="form-control btn btn-success" value="SUBMIT" onclick="updaterecords();">
                        </div>
                    </div>


                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">COROUSES</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="coursesupdate" disabled placeholder="Enter Courses"></select>
                        <span id="messagecoursesu"></span>
                    </div>
                </div>

                @*<div class="form-group row">
                    <label for="dob" class="col-sm-2 col-form-label">DOB</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="" id="dobu" placeholder="Enter Date of Brith">
                        <input id="Dob" type="text" />
                        <span id="messagedobu"></span>
                    </div>
                </div>*@


                <div class="form-group row">
                    <label for="address" class="col-sm-2 col-form-label">DOB</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="dateofbirth" placeholder="Enter Date of Brith">
                        <span id="messagedobu"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="pincode" class="col-sm-2 col-form-label">P_CODE</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="pincodeu" placeholder="Enter Pincode">
                        <span id="messagepincodeu"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="address" class="col-sm-2 col-form-label">ADDRESS</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="addressu" placeholder="Enter Address">
                        <span id="messageaddressu"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">PASSWORD</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" disabled id="passwordu" placeholder=" Enter Password">
                        <span id="messagepasswordu"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="reset" class="form-control btn btn-danger" value="RESET" onclick="resetformupdate();">
                    </div>
                </div>

            </div>


        </div>
    </div>


    <script src="~/Scripts/js/updaterecords.js"></script>
</body>
</html>
